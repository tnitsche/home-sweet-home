[user]
        name = <%= print("name for .gitconfig: "); STDOUT.flush; STDIN.gets.chomp %>
        email = <%= print("email for .gitconfig: "); STDOUT.flush; STDIN.gets.chomp %>

[merge]
        summary = true
[alias]
        st = status
        ci = commit
        co = checkout
        br = branch
        me = merge
        info = log --pretty=format:'%ci - %Cred%h%Creset - %s - %Cblue%an%Creset' --abbrev-commit
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
[pager]
        color = true

[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
[apply]
        whitespace = nowarn
